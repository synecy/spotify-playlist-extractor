<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8"> 
    <title>Spotify Playlist Extractor</title>
    <link href='http://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>

    <script src="bower_components/jquery/dist/jquery.min.js"></script>

    <script src="bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="bower_components/bootstrap/dist/css/bootstrap.min.css">

    <script src="app.js"></script>
    <link rel="stylesheet" href="style.css">

  </head>
  <body>
    <h1>Spotify Playlist Extractor</h1>

		<div class="playlist-controls">
			<div class="input-group input-group-lg">
 				<span class="input-group-addon" id="basic-addon3">User ID</span>
  			<input type="text" class="form-control" id="user_id" aria-describedby="basic-addon3">
			</div>
    	<div class="input-group input-group-lg">
      	<span class="input-group-addon" id="basic-addon3">Playlist ID</span>
      	<input type="text" class="form-control" id="playlist_id" aria-describedby="basic-addon3">
    	</div>
			<br>
    	<button type="button" class="btn btn-success" id="load-playlist-btn">Load playlist</button>
		</div>

		<div class="playlist-content">
    	<label>Spotify Playlist:</label>
      <ul class="list-group">
			</ul>
		</div>
  
  </body>
</html>

